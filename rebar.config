{sub_dirs, ["rel", "deps"]}.
{deps_dir, "deps"}.
{erl_opts, [{parse_transform, lager_transform},
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            warn_untyped_record,
            {i, "include"}]}.
{deps,
 [{parse_trans, ".*",   {git, "git@github.com:tigertext/parse_trans.git", "master"}},
  {lager,       ".*",   {git, "git@github.com:tigertext/lager.git",    {tag, "2.1.1"}}},
  {epocxy,      ".*",   {git, "git@github.com:tigertext/epocxy.git",   "master"}},
  {eper,        "0.69", {git, "git@github.com:tigertext/eper.git",     "HEAD"}},
  {validerl,    ".*",   {git, "git@github.com:tigertext/validerl.git", "master"}}]}.
